<% subscriber ||= @subscriber %>
<div id="signup_form" class="mt-6">
  <%= form_with model: subscriber, class: "flex flex-col sm:flex-row gap-3 justify-center" do |form| %>
    <div class="flex-1 max-w-xs">
      <%= form.email_field :email,
          placeholder: "you@example.com",
          class: "w-full px-4 py-3 bg-slate-800/50 border border-slate-500/50 rounded text-white placeholder-slate-400 focus:outline-none focus:border-slate-400 focus:bg-slate-800/70 transition-all font-space-mono text-sm",
          autocomplete: "email",
          required: true %>
    </div>

    <%= form.submit "Join",
        class: "px-6 py-3 bg-white text-slate-900 font-semibold rounded hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2 focus:ring-offset-slate-900 transition-all cursor-pointer text-sm tracking-wide" %>
  <% end %>

  <% if subscriber&.errors&.any? %>
    <div class="mt-3 text-slate-300 text-xs border border-slate-500/30 rounded px-3 py-2 inline-block">
      <%= subscriber.errors.full_messages.first %>
    </div>
  <% end %>
</div>
